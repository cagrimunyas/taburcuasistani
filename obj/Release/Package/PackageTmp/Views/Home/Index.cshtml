@model Zirve.Models.hasta
<script src="~/Scripts/site.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
@ViewData["message"];
@{ 
    ViewBag.Title = "Taburcu Asistanı";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step col-xs-4">
                    <a href="#step-1" type="button" class="btn btn-success btn-circle">1</a>
                    <p><small>Hastahaneye Giriş</small></p>
                </div>
                <div class="stepwizard-step col-xs-4">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                    <p><small>Tedavi-Test </small></p>
                </div>
                <div class="stepwizard-step col-xs-4">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                    <p><small>Taburcu Etme</small></p>
                </div>
            </div>
        </div>

        <form role="form">
            
            <div class="panel panel-primary setup-content" id="step-1">
                <div class="panel-heading">
                    <h3 class="panel-title">Hasta Bilgileri </h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label id="age" class="control-label">Hastanın Yaşını Girin:</label>
                        <input id="age" name="age" type="text" required="required" class="form-control col-sm-12" placeholder="Yaşı sayısal olarak girin" />
                        <span asp-validation-for="age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="gender" class="control-label">Hastanın Cinsiyeti</label>
                        <select id="gender" name="gender" class="form-control">
                            <option value="Male">Erkek</option>
                            <option value="Female">Kadın</option>
                        </select>
                        <span asp-validation-for="gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="race" name="race" class="control-label">Hastanın Irkı:</label>
                        <select id="race" class="form-control" name="race">
                            <option value="Caucasian">Kafkas</option>
                            <option value="AfricanAmerican">Afro-Amerikan</option>
                            <option value="Asian">Asyalı</option>
                            <option value="Hispanic">İspanyol</option>
                            <option value="Other">Diğer</option>
                        </select>
                        <span asp-validation-for="race" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="admisson_source_id" name="admisson_source_id" class="control-label">Hastayı Yönlendiren Kurum bilgisi:</label>
                        <select id="admisson_source_id" name="admisson_source_id" class="form-control">
                            <option value="1">Hekim Tavsiyesi</option>
                            <option value="2">Klinik Tavsiyesi</option>
                            <option value="3">Sağlık Yönetim Birimi tavsiyesi</option>
                            <option value="4">Bir hastaneden sevk</option>
                            <option value="5">Terapi merkezinden sevk</option>
                            <option value="10">Sağlık ocağından sevk</option>
                            <option value="6">Diğer Sağlık Kurumundan Sevk</option>
                            <option value="7">Acil'e başvuru</option>
                            <option value="8">Güvenlik güçleri başvurusu</option>
                            <option value="11">Normal Doğum sonrası</option>
                            <option value="12">Erken doğum sonrası</option>
                            <option value="13">Hasta bebek</option>
                            <option value="14">Ekstramüral doğum sonrası</option>
                            <option value="18">Evde Sağlık Hizmet birimi tavsiyesi</option>
                            <option value="19">Aynı sağlık birimine readmisyon</option>
                            <option value="22">Farklı bir şikayetle readmisyon</option>
                            <option value="23">Hastane içinde doğum sonrası</option>
                            <option value="24">Farklı bir hastanede doğum sonrası sevk</option>
                            <option value="25">Cerrahi Poliklinik'ten sevk</option>
                            <option value="26">Darülaceze'den (düşkünlerevi)sevk</option>
                            <option value="9">Diğer</option>
                        </select>
                        <span asp-validation-for="admisson_source_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="admission_type_id" name="admission_type_id" class="control-label">Hasta Giriş Tipi</label>
                        <select id="admission_type_id" class="form-control" name="admission_type_id">
                            <option value="1">Acil'e Başvuru</option>
                            <option value="2">Acil'e ambulansla getirilme</option>
                            <option value="3">Hastahaneye randevulu başvuru</option>
                            <option value="4">Yeni doğum</option>
                            <option value="7">Travma Merkezi</option>
                            <option value="5">Diğer</option>
                        </select>
                        <span asp-validation-for="admission_type_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="number_emergency" name="number_emergency" class="control-label">Acil'e başvuru sayısı</label>
                        <input id="number_emergency" name="number_emergency" maxlength="100" type="text" required="required" class="form-control" placeholder="Son 1 yıl içindeki" />
                        <span asp-validation-for="number_emergency" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="number_inpatient" name="number_inpatient" class="control-label">Hastanede yatarak tedavi görme sayısı</label>
                        <input id="number_inpatient" name="number_inpatient" maxlength="100" type="text" required="required" class="form-control" placeholder="Son 1 yıl içindeki" />
                        <span asp-validation-for="number_inpatient" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="number_outpatient" name="number_outpatient" class="control-label">Ayakta tedavi görme sayısı</label>
                        <input id="number_outpatient" name="number_outpatient" maxlength="100" type="text" required="required" class="form-control" placeholder="Son 1 yıl içindeki" />
                    </div>
                    <button class="btn btn-primary nextBtn pull-right" type="button">Sonraki</button>
                </div>
            </div>

            <div class="panel panel-primary setup-content" id="step-2">
                <div class="panel-heading">
                    <h3 class="panel-title">Tedavi - İşlem Bilgileri</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label id="num_medications" name="num_medications" class="control-label">Tedavi Sırasında Uygulanan ilaç sayısı</label>
                        <input id="num_medications" name="num_medications" maxlength="200" type="text" required="required" class="form-control" placeholder="Dr. tarafından uygulanan ilaçların sayısı" />
                        <span asp-validation-for="num_medications" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="num_procedures" name="num_procedures" class="control-label">Tedavi sırasında uygulanan işlem sayısı</label>
                        <input id="num_procedures" name="num_procedures" maxlength="200" type="text" required="required" class="form-control" placeholder="Laboratuvar testlerini dahil etmeyiniz" />
                        <span asp-validation-for="num_procedures" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="number_lab_procedures" name="number_lab_procedures" class="control-label">Tedavi sırasında uygulanan laboratuvar Testi Sayısı</label>
                        <input id="number_lab_procedures" name="number_lab_procedures" maxlength="100" type="text" required="required" class="form-control" placeholder="Yalnızca lab. testleri" />

                    </div>
                    <div class="form-group">
                        <label id="number_diagnoses" name="number_diagnoses" class="control-label">Tedavi ile ilgili konulan toplam teşhis sayısı</label>
                        <input id="number_diagnoses" name="number_diagnoses" maxlength="200" type="text" required="required" class="form-control" placeholder="Tek admisyondaki toplam sayı" />
                        <span asp-validation-for="number_diagnoses" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="diag_1" name="diag_1" class="control-label">Şikayetle ilgili konulan teşhis tipi </label>
                        <select id="diag_1" name="diag_1" class="form-control">
                            <option value="428">Dolaşım</option>
                            <option value="786">Solunum</option>
                            <option value="577">Sindirim</option>
                            <option value="250.8">Diyabet</option>
                            <option value="996">Yaralanma</option>
                            <option value="715">Kas-İskelet</option>
                            <option value="584">Ürogenital</option>
                            <option value="162">Tümör</option>
                            <option value="276">Endokrin, besinsel, metabolik hastalıklar ve bağışıklık problemleri</option>
                            <option value="682">Deri ve Subkutan doku rahatsızlıkları</option>
                            <option value="38">Bulaşıcı ve Parazitik hastalıklar</option>
                            <option value="296">Mental bozukluklar/option>
                            <option value="V57">Dış müdahele sonucu yaralanma</option>
                            <option value="285">Kan ve Kan yapıcı organ rahatsızlıkları</option>
                            <option value="331">Sinir sistemi hastalıkları</option>
                            <option value="648">Gebelik, doğum ve loğusalık komplikasyonları</option>
                            <option value="386">Duyu organı hastalıkları</option>
                            <option value="756">Konjenital bozukluklar</option>
                            <option value="780">Diğer semptom ve kondisyonlar</option> 
                        </select>
                        <span asp-validation-for="diag_1" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary nextBtn pull-right" type="button">Sonraki</button>
                </div>
            </div>

            <div class="panel panel-primary setup-content" id="step-3">
                <div class="panel-heading">
                    <h3 class="panel-title">Taburcu Etme</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label id="time_in_hospital" name="time_in_hospital" class="control-label">Tedavide geçen gün sayısı</label>
                        <input id="time_in_hospital" name="time_in_hospital" maxlength="200" type="text" required="required" class="form-control" placeholder="[Bugün] - [Giriş Günü]" />
                        <span id="time_in_hospital" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="discharge_disposition_id" name="discharge_disposition_id" class="control-label">Taburcu edilme tipi</label>
                        <select id="discharge_disposition_id" class="form-control" name="discharge_disposition_id">
                            <option value="1">Eve taburcu et</option>
                            <option value="2">Diğer sağlık ocağına sevk</option>
                            <option value="3">Bakımevine sevk</option>
                            <option value="4">İşlevsellik, Yetiyitimi ve Sağlığın Uluslararası Sınıflandırması birimine sevk</option>
                            <option value="5">Başka tip bir yatılı hasta tedavi merkezine sevk</option>
                            <option value="6">Ev Sağlık Servisi ile Eve taburcu</option>
                            <option value="7">Sağlık birimi hasta tarafından terk edildi!!!</option>
                            <option value="11">Tedavi için belirlenen Süre doldu</option>
                            <option value="22">Hastane içi başka bir tedavi birimine sevk </option>
                            <option value="18">Diğer</option>
                        </select>
                        <span asp-validation-for="discharge_disposition_id" class="text-danger"></span>
                    </div>

                    <button class="btn btn-primary nextBtn pull-right" type="submit">Taburcu Et</button>
                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                </div>
            </div>
        </form>
    </div>


}